
    


<div class="row">
    <div class="col-md-9">
        <div class="row">
        <% @cart_items.each do |ci| %>
            <div class="col-md-3 col-sm-4 col-xs-6 product <%= ci.product.category.name.parameterize %>">

                <% if ci.product.image_file_name.nil? %>
                    <%= image_tag("/images/original/#{ci.product.category_id}.png", :alt => "#{ci.product.name}") %>
                <% else %>
                    <%= image_tag("/products/#{ci.product.id}/#{ci.product.id}_large.jpg", :alt => "#{ci.product.name}") %>
                <% end %>
                <div class="price">
                    <h4> <%= ci.product.price %> ₺ </h4>
                </div>
                <div class="delete">

                </div>
                <div class="desc">
                    <h4>
                        <%= ci.product.name %>
                    </h4>
                    <%= button_to  "Ürüne Git", product_path(ci.product), class: "btn btn-block", method: :get %>
                </div>
            </div>
        <% end %>
    </div>
    </div>
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-12">
                <div class="desc text-center">
                    <h4>
                        Toplam Ücret <hr> <%= @cart.total_price %> ₺
                    </h4>
                    <hr>
                    <%= button_to  "Satın Al", root_path, class: "btn btn-block btn-admin", style: "bottom: 0;", method: :get %>
                </div>
            </div>
        </div>
    </div>
</div>

